<h1>Message</h1>
<%= form_for @message, url: {action: "create"} do |f| %>
<%= f.hidden_field :post_id, value: params[:post_id]%>
<%= f.hidden_field :sender, value: @message[:sender]%>
<%= f.hidden_field :receiver, value: @message[:receiver]%>
<br><%= f.text_area :message, size: "60x3"%>
  <br><br><%= f.submit "Create" %>
<%end%>
